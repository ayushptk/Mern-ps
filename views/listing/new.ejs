<% layout("/layout/boilerplate.ejs") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Add New Listing</h3>
    <form method="post" action="/listings" class="needs-validation" novalidate  >
    <form method="post" action="/listings" class="needs-validation " novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input type="text" id="title" name="title"   class="form-control">
            <div class="valid-feedback">True Title looks good</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input type="text"  name="description" class="form-control">
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input type="text"  name="image"  class="form-control">
   

        </div>
       
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="text"  name="price" 
            class="form-control"  required> 
            <div class="invalid-feedback">Please enter valid price</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text"  name="country" required  class="form-control">
            <div class="invalid-feedback">Please enter valid country</div>
           </div>

    </div>
       <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text"  name="location" required 
        class="form-control">
        <div class="invalid-feedback">Please enter valid location</div>
       </div>
        
      
      
<button class="btn btn-add">Add</button>

    </form>
    <br>
</div>
</div>
